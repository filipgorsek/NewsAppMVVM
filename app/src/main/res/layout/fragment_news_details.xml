<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/itemViewPager"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/detailsNewsImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_viewpager_imageview_height"
        android:adjustViewBounds="true"
        android:contentDescription="@string/picture_of_a_article"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/detailsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_viewpager_textview_margin"
        android:layout_marginTop="@dimen/item_viewpager_textview_margin"
        android:layout_marginEnd="@dimen/item_viewpager_textview_margin"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/item_viewpager_textview_title_text_size"
        tools:text="Title" />

    <TextView
        android:id="@+id/detailsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_viewpager_textview_margin"
        android:layout_marginTop="@dimen/item_viewpager_textview_margin"
        android:layout_marginEnd="@dimen/item_viewpager_textview_margin"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/item_viewpager_textview_description_text_size"
        tools:text="This the details description text view." />

</LinearLayout>